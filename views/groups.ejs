<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Futiba Club - Fullstack Academy - DevPleno</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="css/style.css" rel="stylesheet">
    <link href="css/futiba-interno.css" rel="stylesheet">
</head>

<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="img-futiba-club/logo.png" height="30" alt="Futiba Club">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                    <% include elements/menu-items %>
                </div>
            </div>
        </nav>
    </header>

    <section class="content">
        <div class="container">
            <div class="row my-container-form mt-4">
                <form class="col" method="POST">
                        <p class="h5 text-center mb-4">Gerenciamento de Grupos</p>
                    <div class="md-form">
                        <i class="fa fa-users prefix grey-text"></i>
                        <input type="text" class="form-control" name="name">
                        <label for="orangeForm-name">Nome do grupo</label>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-deep-orange">Criar grupo</button>
                    </div>
                </form>

                <% if(groups.length > 0){ %>
                    <div class="my-container-table mt-4">
                        <h2>Classificação dos Grupos</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Grupos</th>
                                    <th></th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% groups.forEach(group => { %>
                                    <tr>
                                        <th scope="row"><%= group.id %></th>
                                        <td>
                                            <div class="my-houver-link">
                                                <a href="/groups/<%= group.id %>">
                                                    <%= group.name %>
                                                </a>
                                            </div>
                                        </td>
                                        <td><%= group.role %></td>
                                        <td>
                                            <% if(group.role === 'owner'){ %>
                                                <a href="/groups/delete/<%= group.id %>">
                                                    Excluir
                                                </a>
                                            <% } %>

                                            <% if(!group.role){ %>
                                                <a href="/groups/<%= group.id %>/join">
                                                    Solicitar entrada
                                                </a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% }else{ %>
                    <div class="my-container-info mt-4">
                        <p class="alert alert-info width=100%" role="alert">Nenhum grupo cadastrado</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <% include elements/footer %>